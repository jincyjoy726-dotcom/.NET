@model StudentRecord.Models.Student
@{
    ViewData["Title"] = "Add Student";
}

## Add Student

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="RollNumber"></label>
        <input asp-for="RollNumber" class="form-control" />
        <span asp-validation-for="RollNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Marks"></label>
        <input asp-for="Marks" class="form-control" type="number" />
        <span asp-validation-for="Marks" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}